---
import logoImg from "../imgs/Logo_Standard.svg"
export type Props = {
  navClass?: string
  logo?: boolean
}
const { navClass, logo } = Object.assign(
  {},
  { logo: true },
  Astro.props as Props,
)
---

<style lang="scss">
  nav {
    // This does nothing normally, but the schedule page uses scroll snapping to
    // centre itself when viewed in horizontal-scrolling mode on narrow devices;
    // this ensures that it's still possible to scroll to the top
    scroll-snap-align: start;
  }
</style>
<nav class={navClass}>
  {
    logo && (
      <a id="nav-logo" href="/">
        <img src={logoImg.src} />
      </a>
    )
  }
  <ul>
    <li><a href="/about">About</a></li>
    <li><a href="/sponsor">Sponsor</a></li>
    <li><a href="/program">Program</a></li>
    <li><a href="/attend">Attend</a></li>
    <li><a href="/safety">Safety</a></li>
  </ul>
  <div class="dates">
    Friday 12th to Tuesday 16th September 2025&emsp;&bull;&emsp;
    <span class="location">Pullman Melbourne on the Park</span>
  </div>
</nav>
