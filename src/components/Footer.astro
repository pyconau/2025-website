---
import { getSponsorsByTier } from "../util"
const sponsorsByTier = await getSponsorsByTier()
---

<style lang="scss">
  @import "../vars";
  footer {
    form {
      --form-colour: #777 !important;
    }
    color: #777;
    background-color: #eee;
    margin-top: 100px;
    padding-top: 50px;
    padding-bottom: 50px;
    .sponsor-grid {

      gap: 3rem;

      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;

      line-height: 1.3em;
      justify-content: center;
      
      margin: 0 5rem;

      img {
        height: 5rem;;
        width: auto;
        object-fit: contain;
      }
    }

    .copyright {
      margin: 40px;
      text-align: center;
    }
  }
</style>

<footer>
  <section class="sponsor-grid">
    {
      sponsorsByTier.map((tier) => (
        <>
          {tier.sponsors.map((sponsor) => (
            <a href={`/sponsor/#${sponsor.slug}`}>
              <img
                src={`/sponsor-logos/${sponsor.data.logo}`}
                alt={sponsor.data.name}
              />
            </a>
          ))}
        </>
      ))
    }
  </section>
  <section class="copyright">
    <b>Contact us:</b>
    <a href="https://mastodon.pycon.org.au/@pyconau" rel="me" target="_blank">Mastodon</a>
    &bull;
    <a href="https://bsky.app/profile/pyconau.bsky.social" target="_blank">BlueSky</a>
    &bull;
    <a href="https://linkedin.com/company/pyconau" target="_blank">LinkedIn</a>
    &bull;
    <a href="mailto:contact@pycon.org.au">contact@pycon.org.au</a><br />
    &copy; 2020&ndash;2025, the PyCon AU team
  </section>
</footer>
