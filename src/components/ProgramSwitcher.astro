---
import Switcher from "./Switcher.astro"
import SwitcherItem from "./SwitcherItem.astro"
export type Props = {
  current: "list" | "friday" | "saturday" | "sunday" | "sprints"
}
const { current } = Astro.props as Props
---
<style lang="scss">
  @media only screen and (max-width: 600px){
    .long-name {
      display: none;
    }
  }
</style>
<Switcher>
  <SwitcherItem href="/program/list/" selected={current === "list"}>
    All
  </SwitcherItem>
  <SwitcherItem href="/program/friday/" selected={current === "friday"}>
    Fri<span class='long-name'>day</span>
  </SwitcherItem>
  <SwitcherItem href="/program/saturday/" selected={current === "saturday"}>
    Sat<span class="long-name">urday</span>
  </SwitcherItem>
  <SwitcherItem href="/program/sunday/" selected={current === "sunday"}>
    Sun<span class='long-name'>day</span>
  </SwitcherItem>
  <SwitcherItem href="/program/sprints/" selected={current === "sprints"}>
    Mon<span class='long-name'>day</span> & Tue<span class='long-name'>sday</span>
  </SwitcherItem>
</Switcher>
